<h2>Students</h2>

<div id="student-wrapper">
  <% @films.each do |film| %>

  <div class="film">
    <h3><a href="/films/<%= film.id %>"><%= film.title %></a></h3>
    <p>Director: <%= film.director %></p>
    <p>Quantity: <%= film.quantity %></p>
    <p>Purchase Cost: <%= film.purchase_cost %></p>
    <p>Sell Price: <%= film.sell_price %></p>
    <p>House: <%= student.house.name.capitalize %></p>
  </div>

  <% end %>
</div>
