<h2 style="text-align:center;">Films</h2>

<div id="film-wrapper">
  <% @films.each do |film| %>

  <div class="film">
    <h3><a href="/films/<%= film.id %>"><%= film.title %></a></h3>
    <p>Director: <%= film.director %></p>
    <p>Quantity: <%= film.quantity %></p>
    <p>Purchase Cost: <%= film.purchase_cost_converter %></p>
    <p>Sell Price: <%= film.sell_price_converter %></p>
    <p>Production Company: <%= film.production_company.name %></p>
    <p>Stock Level: <%= film.stock_check %></p>
    <p>Markup Amount: <%= film.markup %></p>
  </div>
  <br>
  <hr>
  <% end %>
</div>
