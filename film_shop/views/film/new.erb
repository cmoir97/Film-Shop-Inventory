<h2>Add A New Film</h2>
<form method="POST" action="/films">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="title">Film Title:</label>
      <input type="text" name="title" id="title"/>
    </div>

    <div class="form-el">
      <label for="quantity">Number of Copies:</label>
      <input type="number" name="quantity" id="quantity"/>
    </div>

    <div class="form-el">
      <label for="purchase_cost">Purchase Cost(in pence):</label>
      <input type="number" min= "100" name="purchase_cost" id="purchase_cost"/>
    </div>

    <div class="form-el">
      <label for="sell_price">Sell Price(in pence):</label>
      <input type="number" name="sell_price" id="sell_price"/>
    </div>

    <div class="form-el">
      <label for="director_select">Select Director:</label>
      <select name="director_id" id="director_select">
        <% @directors.each do |director| %>
            <option value=<%= director.id %>><%= director.name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="production_company_select">Select Production Company:</label>
      <select name="production_company_id" id="production_company_select">
        <% @production_companies.each do |production_company| %>
            <option value=<%= production_company.id %>><%= production_company.name %></option>
        <% end %>
      </select>
    </div>
<br>
<br>
    <div class="form-el">
      <input type="submit" value="Add Film to Stock"/>
    </div>

  </div>
</form>
